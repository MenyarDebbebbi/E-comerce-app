@model WebApplication2.ViewModels.OrderHistoryViewModel
@using System.Globalization
@{
    ViewData["Title"] = "Historique d'achat";
    var culture = CultureInfo.CurrentCulture;
}

<section class="mx-auto max-w-6xl px-4 py-12 lg:px-0">
    <header class="mb-10 text-center">
        <h1 class="text-4xl font-semibold text-gray-900">Historique d'achats</h1>
        <p class="mt-3 text-gray-500 text-sm sm:text-base">
            Bonjour @Model.UserDisplayName, consultez vos commandes passées.
        </p>
    </header>

    <section class="grid gap-6 sm:grid-cols-3">
        <article class="rounded-2xl bg-gradient-to-r from-indigo-600 to-purple-600 p-[2px] shadow-lg">
            <div class="rounded-2xl bg-white p-5">
                <p class="text-xs uppercase tracking-wide text-gray-500">Total commandes</p>
                <p class="mt-2 text-3xl font-semibold text-gray-900">@Model.TotalOrders</p>
            </div>
        </article>
        <article class="rounded-2xl bg-gradient-to-r from-purple-600 to-pink-600 p-[2px] shadow-lg">
            <div class="rounded-2xl bg-white p-5">
                <p class="text-xs uppercase tracking-wide text-gray-500">Montant dépensé</p>
                <p class="mt-2 text-3xl font-semibold text-gray-900">@Model.TotalAmount.ToString("0.00", culture) DT</p>
            </div>
        </article>
        <article class="rounded-2xl bg-gradient-to-r from-indigo-600 to-purple-600 p-[2px] shadow-lg">
            <div class="rounded-2xl bg-white p-5">
                <p class="text-xs uppercase tracking-wide text-gray-500">Dernière commande</p>
                <p class="mt-2 text-3xl font-semibold text-gray-900">
                    @(Model.LastOrderDate.HasValue ? Model.LastOrderDate.Value.ToString("dd MMM yyyy", culture) : "N/A")
                </p>
            </div>
        </article>
    </section>

    @if (Model.Orders.Any())
    {
        <section class="mt-14 space-y-8" aria-label="Liste des commandes">
            @foreach (var order in Model.Orders)
            {
                <article class="rounded-3xl bg-white/70 backdrop-blur-xl border border-gray-100 p-6 shadow-xl hover:shadow-2xl transition">
                    <header class="flex flex-col gap-4 border-b border-gray-200 pb-4 lg:flex-row lg:items-center lg:justify-between">
                        <div>
                            <span class="text-xs uppercase text-indigo-600 tracking-wider">Commande</span>
                            <h2 class="text-2xl font-bold text-gray-900">#@order.OrderId</h2>
                            <p class="text-gray-500 text-sm">@order.Address</p>
                        </div>

                        <dl class="grid grid-cols-3 gap-6 text-center">
                            <div>
                                <dt class="text-gray-500 text-xs uppercase tracking-wide">Date</dt>
                                <dd class="text-lg font-semibold text-gray-900">@order.OrderDate.ToString("dd MMM yyyy", culture)</dd>
                            </div>
                            <div>
                                <dt class="text-gray-500 text-xs uppercase tracking-wide">Articles</dt>
                                <dd class="text-lg font-semibold text-gray-900">@order.Items.Count</dd>
                            </div>
                            <div>
                                <dt class="text-gray-500 text-xs uppercase tracking-wide">Total</dt>
                                <dd class="text-lg font-semibold text-gray-900">@order.TotalAmount.ToString("0.00", culture) DT</dd>
                            </div>
                        </dl>
                    </header>

                    @if (order.Items.Any())
                    {
                        <div class="mt-4 space-y-4">
                            @foreach (var item in order.Items)
                            {
                                <div class="flex items-center justify-between rounded-xl bg-gray-50 border p-4 shadow-sm">
                                    <div class="flex flex-col">
                                        <span class="font-medium text-gray-900">@item.ProductName</span>
                                        <span class="text-xs text-gray-500">Quantité : @item.Quantity</span>
                                    </div>
                                    <div class="text-right">
                                        <p class="text-sm text-gray-500">@item.UnitPrice.ToString("0.00", culture) DT</p>
                                        <p class="font-semibold text-gray-900">@item.SubTotal.ToString("0.00", culture) DT</p>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="mt-4 text-sm text-gray-600 italic">Aucun article dans cette commande.</p>
                    }
                </article>
            }
        </section>
    }
    else
    {
        <section class="mt-14 rounded-3xl bg-white/80 backdrop-blur-xl border border-dashed border-gray-300 p-12 text-center shadow-xl">
            <p class="text-2xl font-bold text-gray-900">Pas encore de commande</p>
            <p class="text-gray-600 mt-3">Découvrez nos produits et passez votre première commande !</p>

            <a asp-controller="Product" asp-action="Index"
               class="mt-8 inline-flex items-center rounded-full bg-indigo-600 px-8 py-3 text-sm font-semibold text-white shadow-lg hover:bg-indigo-500 transition">
                Explorer les produits
            </a>
        </section>
    }
</section>
