@model IEnumerable<WebApplication2.Models.Category>
<div class="card shadow-sm">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0"><i class="fa-solid fa-list-ul me-2"></i>Catégories</h5>
    </div>
    <ul class="list-group list-group-flush">
        @if (Model == null || !Model.Any())
        {
            <li class="list-group-item text-muted">Aucune catégorie disponible.</li>
        }
        else
        {
            @foreach (var categorie in Model)
            {
                <li class="list-group-item d-flex align-items-center">
                    <i class="fa-solid fa-circle fa-2xs text-secondary me-2"></i>
                    <a class="text-decoration-none text-dark fw-semibold flex-grow-1"
                       asp-controller="Product" asp-action="Index"
                       asp-route-categoryId="@categorie.CategoryId">
                        @categorie.CategoryName
                    </a>
                    <i class="fas fa-angle-right text-muted"></i>
                </li>
            }
        }
    </ul>
</div>