@model WebApplication2.Models.Product
@{
    ViewData["Title"] = "Détails du produit";
    var photoPath = "~/images/" + (Model.Image ?? "noimage.jpg");
}

<div class="container py-4">
    <div class="card product-card">
        <div class="row g-0">
            <div class="col-md-5">
                <img src="@photoPath" asp-append-version="true" class="img-fluid w-100" style="object-fit: cover; height: 100%; min-height: 320px; border-top-left-radius: var(--border-radius); border-bottom-left-radius: var(--border-radius);" alt="@Model.Name" />
            </div>
            <div class="col-md-7">
                <div class="card-body">
                    <h2 class="product-title mb-2">@Model.Name</h2>
                    <div class="d-flex align-items-center mb-3">
                        <span class="product-price me-3">@Model.Price.ToString("0.00") DT</span>
                        <span class="badge bg-success me-2">Stock: @Model.QteStock</span>
                        <span class="badge bg-primary">@Model.Category?.CategoryName</span>
                    </div>

                    <hr />

                    <div class="mb-4">
                        <div class="row mb-2">
                            <div class="col-5 text-muted">Identifiant</div>
                            <div class="col-7">#@Model.ProductId</div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-5 text-muted">Catégorie</div>
                            <div class="col-7">@Model.Category?.CategoryName</div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-5 text-muted">Quantité en stock</div>
                            <div class="col-7">@Model.QteStock</div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-5 text-muted">Prix</div>
                            <div class="col-7">@Model.Price.ToString("0.00") DT</div>
                        </div>
                    </div>

                    <div class="d-flex flex-wrap gap-2">
                        <a asp-action="Edit" asp-route-id="@Model?.ProductId" class="btn btn-primary">
                            <i class="fas fa-edit me-2"></i>Modifier
                        </a>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Retour à la liste
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>