@model IEnumerable<WebApplication2.Models.Product>
@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@{
    ViewData["Title"] = "Liste des produits";
}

<div class="container py-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="display-5 mb-0">
                    <i class="fas fa-box me-3 text-primary"></i>Nos Produits
                </h1>
                @if (SignInManager.IsSignedIn(User) && (User.IsInRole("Admin") || User.IsInRole("Manager")))
                {
                    <a asp-action="Create" class="btn btn-success">
                        <i class="fas fa-plus me-2"></i>Ajouter un produit
                    </a>
                }
            </div>
            <p class="text-muted mt-2">Découvrez notre collection de produits de qualité</p>
        </div>
    </div>

    @if (Model.Any())
    {
        <div class="row g-4">
            @foreach (var product in Model)
            {
                var photoPath = "~/images/" + (product.Image ?? "noimage.jpg");
                <div class="col-lg-4 col-md-6">
                    <div class="card product-card h-100">
                        <div class="position-relative">
                            <img src="@photoPath" asp-append-version="true" class="card-img-top product-image" alt="@product.Name" />
                            <div class="position-absolute top-0 end-0 m-2">
                                <span class="badge bg-primary">@product.Category?.CategoryName</span>
                            </div>
                        </div>
                        
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title product-title">@product.Name</h5>
                            
                            <div class="mb-3">
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <span class="product-price">@product.Price.ToString("0.00") DT</span>
                                    <span class="badge bg-success">Stock: @product.QteStock</span>
                                </div>
                            </div>

                            <div class="mt-auto">
                                <div class="d-grid gap-2">
                                    <a asp-controller="Product" asp-action="Details" asp-route-id="@product.ProductId" class="btn btn-outline-primary">
                                        <i class="fas fa-eye me-2"></i>Voir détails
                                    </a>
                                    <a asp-controller="Panier" asp-action="AddProduct" class="btn btn-outline-secondary" asp-route-id="@product.ProductId">Ajouter Au Panier</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <div class="card">
                <div class="card-body">
                    <i class="fas fa-box fa-4x text-muted mb-3"></i>
                    <h4 class="text-muted">Aucun produit trouvé</h4>
                    <p class="text-muted">@(SignInManager.IsSignedIn(User) && (User.IsInRole("Admin") || User.IsInRole("Manager")) ? "Commencez par ajouter votre premier produit." : "Aucun produit n'est disponible pour le moment.")</p>
                    @if (SignInManager.IsSignedIn(User) && (User.IsInRole("Admin") || User.IsInRole("Manager")))
                    {
                        <a asp-action="Create" class="btn btn-primary">
                            <i class="fas fa-plus me-2"></i>Ajouter un produit
                        </a>
                    }
                </div>
            </div>
        </div>
    }
    <div class="pagination">
        @for (int i = 1; i <= ViewBag.TotalPages; i++)
        {
            <a asp-action="Index" asp-route-categoryId="@ViewBag.CategoryId"
               asp-route-page="@i" class="btn btn-secondary m-1">
                @i
            </a>
        }
    </div>
</div>