@model IEnumerable<WebApplication2.Models.Category>

@{
    ViewData["Title"] = "Gestion des Catégories";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h1 class="h2 mb-0">
                        <i class="fas fa-tags me-2 text-primary"></i>
                        Gestion des Catégories
                    </h1>
                    <p class="text-muted mb-0">Organisez vos produits par catégories</p>
                </div>
                <a asp-action="Create" class="btn btn-primary btn-lg">
                    <i class="fas fa-plus me-2"></i>
                    Nouvelle Catégorie
                </a>
            </div>

            @if (Model.Any())
            {
                <div class="row">
                    @foreach (var item in Model)
                    {
                        <div class="col-lg-4 col-md-6 mb-4">
                            <div class="card category-card h-100">
                                <div class="card-body d-flex flex-column">
                                    <div class="d-flex align-items-center mb-3">
                                        <div class="category-icon me-3">
                                            <i class="fas fa-folder"></i>
                                        </div>
                                        <div class="flex-grow-1">
                                            <h5 class="card-title mb-0">@Html.DisplayFor(modelItem => item.CategoryName)</h5>
                                            <small class="text-muted">Catégorie de produits</small>
                                        </div>
                                    </div>
                                    
                                    <div class="mt-auto">
                                        <div class="d-flex gap-2">
                                            <a asp-action="Details" asp-route-id="@item.CategoryId" 
                                               class="btn btn-outline-primary btn-sm flex-fill">
                                                <i class="fas fa-eye me-1"></i>
                                                Voir
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@item.CategoryId" 
                                               class="btn btn-outline-warning btn-sm flex-fill">
                                                <i class="fas fa-edit me-1"></i>
                                                Modifier
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.CategoryId" 
                                               class="btn btn-outline-danger btn-sm flex-fill">
                                                <i class="fas fa-trash me-1"></i>
                                                Supprimer
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <div class="empty-state">
                        <i class="fas fa-tags fa-4x text-muted mb-4"></i>
                        <h3 class="text-muted">Aucune catégorie trouvée</h3>
                        <p class="text-muted mb-4">Commencez par créer votre première catégorie pour organiser vos produits.</p>
                        <a asp-action="Create" class="btn btn-primary btn-lg">
                            <i class="fas fa-plus me-2"></i>
                            Créer la Première Catégorie
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
