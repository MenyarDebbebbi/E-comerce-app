@model WebApplication2.Models.Category

@{
    ViewData["Title"] = "Modifier la Catégorie";
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-gradient-warning text-white text-center py-4">
                    <h2 class="mb-0">
                        <i class="fas fa-edit me-2"></i>
                        Modifier la Catégorie
                    </h2>
                    <p class="mb-0 mt-2 opacity-75">Modifiez les informations de cette catégorie</p>
                </div>
                
                <div class="card-body p-5">
                    <form asp-action="Edit" class="needs-validation" novalidate>
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        <input type="hidden" asp-for="CategoryId" />
                        
                        <div class="mb-4">
                            <div class="form-floating">
                                <input asp-for="CategoryName" class="form-control" placeholder="Nom de la catégorie" required />
                                <label asp-for="CategoryName" class="form-label">
                                    <i class="fas fa-tag me-2"></i>Nom de la Catégorie
                                </label>
                                <span asp-validation-for="CategoryName" class="text-danger"></span>
                            </div>
                        </div>
                        
                        <div class="d-flex justify-content-between align-items-center pt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                                <i class="fas fa-arrow-left me-2"></i>
                                Retour à la Liste
                            </a>
                            <button type="submit" class="btn btn-warning btn-lg px-5">
                                <i class="fas fa-save me-2"></i>
                                Enregistrer les Modifications
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        $(document).ready(function () {
            // Validation du formulaire
            (function() {
                'use strict';
                window.addEventListener('load', function() {
                    var forms = document.getElementsByClassName('needs-validation');
                    var validation = Array.prototype.filter.call(forms, function(form) {
                        form.addEventListener('submit', function(event) {
                            if (form.checkValidity() === false) {
                                event.preventDefault();
                                event.stopPropagation();
                            }
                            form.classList.add('was-validated');
                        }, false);
                    });
                }, false);
            })();
        });
    </script>
}
