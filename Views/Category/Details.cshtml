@model WebApplication2.Models.Category

@{
    ViewData["Title"] = "Détails de la Catégorie";
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-gradient-info text-white text-center py-4">
                    <h2 class="mb-0">
                        <i class="fas fa-info-circle me-2"></i>
                        Détails de la Catégorie
                    </h2>
                    <p class="mb-0 mt-2 opacity-75">Informations détaillées sur cette catégorie</p>
                </div>
                
                <div class="card-body p-5">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="category-details">
                                <div class="detail-item">
                                    <div class="detail-icon">
                                        <i class="fas fa-tag"></i>
                                    </div>
                                    <div class="detail-content">
                                        <h5 class="detail-label">Nom de la Catégorie</h5>
                                        <p class="detail-value">@Html.DisplayFor(model => model.CategoryName)</p>
                                    </div>
                                </div>
                                
                                <div class="detail-item">
                                    <div class="detail-icon">
                                        <i class="fas fa-hashtag"></i>
                                    </div>
                                    <div class="detail-content">
                                        <h5 class="detail-label">ID de la Catégorie</h5>
                                        <p class="detail-value">@Html.DisplayFor(model => model.CategoryId)</p>
                                    </div>
                                </div>
                                
                                <div class="detail-item">
                                    <div class="detail-icon">
                                        <i class="fas fa-boxes"></i>
                                    </div>
                                    <div class="detail-content">
                                        <h5 class="detail-label">Statut</h5>
                                        <p class="detail-value">
                                            <span class="badge bg-success">Active</span>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="d-flex justify-content-between align-items-center pt-4 mt-4 border-top">
                        <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                            <i class="fas fa-arrow-left me-2"></i>
                            Retour à la Liste
                        </a>
                        <div class="btn-group">
                            <a asp-action="Edit" asp-route-id="@Model?.CategoryId" class="btn btn-warning btn-lg">
                                <i class="fas fa-edit me-2"></i>
                                Modifier
                            </a>
                            <a asp-action="Delete" asp-route-id="@Model?.CategoryId" class="btn btn-danger btn-lg">
                                <i class="fas fa-trash me-2"></i>
                                Supprimer
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
