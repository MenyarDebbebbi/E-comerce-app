@model List<WebApplication2.ViewModels.UserRoleViewModel>
@{
    ViewData["Title"] = "Edit Users In Role";
}

<h1 class="mb-3">Edit Users In Role</h1>

<form asp-action="EditUsersInRole" asp-controller="Admin" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" name="roleId" value="@ViewBag.roleId" />

    <div class="list-group mb-3">
        @for (var i = 0; i < Model.Count; i++)
        {
            <div class="list-group-item d-flex justify-content-between align-items-center">
                <div>
                    <input type="hidden" asp-for="@Model[i].UserId" />
                    <input type="hidden" asp-for="@Model[i].UserName" />
                    <div class="fw-bold">@Model[i].UserName</div>
                </div>
                <div class="form-check m-0">
                    <input class="form-check-input" asp-for="@Model[i].IsSelected" />
                    <label class="form-check-label" for="IsSelected">In role</label>
                </div>
            </div>
        }
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="EditRole" asp-controller="Admin" asp-route-id="@ViewBag.roleId" class="btn btn-secondary ms-2">Cancel</a>
</form>
